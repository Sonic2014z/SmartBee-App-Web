<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
  <% if (nodos.length > 0) { %>
    <% nodos.forEach(nodo => { %>
      <div class="border-2 border-yellow-500 rounded-lg p-4 shadow-sm bg-white">
        
        <!-- Header -->
        <div class="flex justify-between items-center mb-2">
          <h2 class="text-lg font-semibold text-yellow-700">
             Nodo
          </h2>
          <span class="text-xs bg-yellow-100 text-yellow-700 px-2 py-1 rounded-full">
            <%= nodo.tipo %>
          </span>
        </div>

        <!-- Contenido -->
        <p class="text-sm text-gray-600 mb-1">
          <span class="font-bold">ID:</span> <%= nodo.nodo_id %>
        </p>
        <p class="text-sm text-gray-600 mb-1">
          <span class="font-bold">Descripción:</span> <%= nodo.nodo_desc %>
        </p>
        <p class="text-sm text-gray-600 mb-1">
          <span class="font-bold">Colmena:</span> <%= nodo.colmena_id || '-' %>
        </p>
        <p class="text-sm text-gray-600 mb-1">
          <span class="font-bold">Estación:</span> <%= nodo.estacion_id || '-' %>
        </p>

        <!-- Acciones -->
        <div class="mt-3 flex gap-2">
         

            <a href="/admin/nodos/view/<%= nodo.nodo_id %>"  class="capitalize bg-green-600 text-white px-3 py-1 rounded-md text-sm hover:bg-green-500 " > VER   <%= nodo.tipo %></a>
            

        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-span-3 text-center py-6 text-gray-500">
      No hay nodos registrados para este usuario.
    </div>
  <% } %>
</div>



