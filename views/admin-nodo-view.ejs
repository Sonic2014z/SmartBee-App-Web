<div class="max-w-xl mx-auto bg-white border-2 border-yellow-400 rounded-lg shadow-md p-6 mt-6">

  <!-- Header -->
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold text-yellow-700 flex items-center gap-2">
      🐝 Nodo <%= nodo.nodo_id %>
    </h2>
    <span class="text-xs px-3 py-1 rounded-full 
                 <%= nodo.tipo === 'COLMENA' ? 'bg-orange-100 text-orange-600' : 'bg-green-100 text-green-600' %>">
      <%= nodo.tipo %>
    </span>
  </div>

  <!-- Info general -->
  <p class="text-gray-700 mb-2">
    <span class="font-semibold">Descripción:</span> <%= nodo.nodo_desc %>
  </p>

  <% if (nodo.colmena_id) { %>
    <p class="text-gray-700 mb-2">
      <span class="font-semibold">Colmena:</span> <%= nodo.colmena_id %> - <%= nodo.colmena_desc %>
    </p>
  <% } %>

  <% if (nodo.estacion_id) { %>
    <p class="text-gray-700 mb-2">
      <span class="font-semibold">Estación:</span> <%= nodo.estacion_id %> - <%= nodo.estacion_desc %>
    </p>
  <% } %>

  <!-- Última medición -->
  <div class="mt-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-3">📊 Última medición</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

      <% if (nodo.temperatura) { %>
        <div class="border-2 border-red-400 rounded-lg p-4 shadow-sm text-center">
          <h4 class="text-sm font-semibold text-red-600">🌡️ Temperatura</h4>
          <p class="text-2xl font-bold text-gray-800 mt-2"><%= nodo.temperatura %> °C</p>
        </div>
      <% } %>

      <% if (nodo.humedad) { %>
        <div class="border-2 border-blue-400 rounded-lg p-4 shadow-sm text-center">
          <h4 class="text-sm font-semibold text-blue-600">💧 Humedad</h4>
          <p class="text-2xl font-bold text-gray-800 mt-2"><%= nodo.humedad %> %</p>
        </div>
      <% } %>

      <% if (nodo.peso) { %>
        <div class="border-2 border-green-400 rounded-lg p-4 shadow-sm text-center">
          <h4 class="text-sm font-semibold text-green-600">⚖️ Peso</h4>
          <p class="text-2xl font-bold text-gray-800 mt-2"><%= nodo.peso %> kg</p>
        </div>
      <% } %>

    </div>
    <p class="text-xs text-gray-500 mt-3">
      Última actualización: <%= nodo.ultima_fecha ? nodo.ultima_fecha.toLocaleString() : 'No disponible' %>
    </p>
  </div>

  <!-- Acciones -->
   <br>

    <a href="/admin/usuarios"
       class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-md text-sm">
       Volver
    </a>
  </div>
</div>
