<section class="p-6 flex-1 overflow-auto">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-7xl mx-auto">

    <article
      class="bg-white rounded-lg shadow-md relative pt-3 pb-6 px-6 border-t-4 border-[#D87E0A]"
      aria-label="Nodo X Colmena">
      
      <div class="flex justify-between text-xs text-[#2B2B2B] font-light mb-1">
        <div>Nodo X (Colmena)</div>
        <div>Ubicación: xxx</div>
      </div>

      <!-- Labels abreviados en móviles -->
      <div class="flex justify-between font-semibold text-sm mb-1">
        <div>
          <span class="sm:hidden">Hum:</span>
          <span class="hidden sm:inline">Humedad:</span>
        </div>
        <div>
          <span class="sm:hidden">Temp:</span>
          <span class="hidden sm:inline">Temperatura:</span>
        </div>
        <div class="pr-6">
          <span class="sm:hidden">Peso:</span>
          <span class="hidden sm:inline">Peso:</span>
        </div>
      </div>

      <div class="flex justify-between font-extrabold text-2xl mb-4">
        <div>44<span class="text-base font-bold">%</span></div>
        <div>29<span class="text-base font-bold">°c</span></div>
        <div class="pr-6">22<span class="text-base font-bold">kg</span></div>
      </div>

      <div class="flex space-x-3">
        <button
          class="flex items-center space-x-1 bg-[#D87E0A] text-white text-xs font-semibold rounded px-3 py-1 shadow"
          type="button">
          <i class="fas fa-chart-bar"></i>
          <span>Ver Gráfico</span>
        </button>
        <button
          class="flex items-center space-x-1 bg-[#D92B27] text-white text-xs font-semibold rounded px-3 py-1 shadow"
          type="button">
          <i class="fas fa-trash-alt"></i>
          <span>Eliminar</span>
        </button>
      </div>

    </article>

  </div>
</section>
